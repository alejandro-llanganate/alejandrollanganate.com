  /* Modal general - Overlay que cubre toda la pantalla */
  .modal {
    position: fixed;
    inset: 0;
    background: rgba(0, 0, 0, 0.9);
    display: grid;
    place-items: center;
    z-index: 1000;
    backdrop-filter: blur(8px);
    opacity: 0;
    visibility: hidden;
    transition: all 0.4s ease-in-out;
  }

  /* Estado activo del modal */
  .modal.show {
    opacity: 1;
    visibility: visible;
  }

