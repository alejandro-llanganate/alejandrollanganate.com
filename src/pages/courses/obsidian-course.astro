      0 0 0 1px rgba(0, 0, 0, 0.1);
    animation: float 8s ease-in-out infinite;
  }

  /* Animación de flotación del cupón */
  @keyframes float {
    0%,
    100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-25px);
    }
  }

